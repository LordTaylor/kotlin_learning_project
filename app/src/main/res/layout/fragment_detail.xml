<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:id="@+id/name_text"
            android:background="@drawable/drawable_round_edit_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="109dp"
            android:layout_height="116dp"
            tools:src="@drawable/android_ic"
            tools:ignore="ContentDescription"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:background="@drawable/drawable_round_edit_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionText"
            android:layout_marginTop="10dp"
            app:layout_goneMarginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/name_text"
            app:layout_constraintEnd_toEndOf="@+id/name_text"
            app:layout_constraintStart_toStartOf="@+id/name_text"/>
    <Button
            android:text="Button"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/drawable_round_button"
            android:layout_height="wrap_content"
            android:id="@+id/detail_save"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/descriptionText" android:layout_width="0dp"/>
    <Button
            android:text="Button"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/drawable_round_button"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/detail_cancle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText"
            app:layout_constraintEnd_toEndOf="@+id/descriptionText"
            app:layout_constraintStart_toEndOf="@+id/detail_save" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>